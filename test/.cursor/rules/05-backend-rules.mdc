export async function POST(request: Request) {
  try {
    const body = await request.json();
    
    // 1. 验证输入
    const validated = schema.parse(body);
    
    // 2. 处理业务逻辑
    const result = await businessLogic(validated);
    
    // 3. 返回标准化响应
    return Response.json({
      success: true,
      data: result,
      error: null,
    });
  } catch (error) {
    // 4. 统一错误处理
    return Response.json({
      success: false,
      data: null,
      error: getErrorMessage(error),
    }, { status: 500 });
  }
}